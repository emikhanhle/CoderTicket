  <%= form_tag sessions_path, method: "post", class: "form" do %>

  <div class="form-group">
    <%= label_tag "Email"%>
    <%= text_field_tag :email %>
  </div>
  <div class="form-group">
    <%= label_tag "Password" %>
    <%= password_field_tag :password %>
  </div>
  <div class="form-group">
    <%= submit_tag "Login", class: "btn btn-success" %>
    <%= link_to "Cancel", :back, class: "btn btn-warning" %>
  </div>
  <% end %>
</div>
