<div class="container">
  <h1>Create Venue</h1>
  <div>
    <% unless @venue.errors.empty? %>
      <div class="alert alert-warning">
        <%= @venue.errors.full_messages.to_sentence %>
      </div>
    <% end %>
  </div>
  <%= form_for Venue.new do |f| %>
    <div class="form-group form-inline">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group form-inline">
      <%= f.label :full_address %>
      <%= f.text_field :full_address, class: "form-control" %>
    </div>
    <div class="form-group form-inline">
      <%= f.label :region_id %>
      <%= f.select :region_id, Region.all.collect { |region| [region.name, region.id]}, promt: "Select a region", class: "form-control" %>
    </div>
    <div class="form-group form-inline">
      <%= f.submit "Add", class: "btn btn-warning btn-lg" %>
      <%= link_to "Cancel", root_path, class: "btn btn-danger btn-lg"%>
    </div>
  <% end %>

</div>
